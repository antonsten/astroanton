---
interface Props {
    quote: string[];
    author: string;
    role: string;
    bgColor?: 'blue' | 'black' | 'light-grey';
}

const { quote, author, role, bgColor = 'light-grey' } = Astro.props;

const bgColorClasses = {
    'blue': 'bg-[#0066FF] text-white',
    'black': 'bg-black text-white',
    'light-grey': 'bg-light-grey text-black'
};
---

<div class={`${bgColorClasses[bgColor]} p-8 rounded-xl flex flex-col h-full`}>
    <div class="relative flex-1">
        <div class="relative">
            <span class="absolute -left-[0.4em] -top-[0.25em] text-[16px]">"</span>
            {quote.map((paragraph, i) => (
                <p class="text-[16px] leading-[24px] mb-4 last:mb-0">
                    {paragraph}{i === quote.length - 1 && '"'}
                </p>
            ))}
        </div>
    </div>
    <footer class="mt-10">
        <p class="text-[16px] leading-[24px] tracking-[-0.01em] font-medium">{author}</p>
        {role && <p class="text-[16px] leading-[24px] tracking-[-0.01em] font-regular opacity-80 -mt-1">{role}</p>}
    </footer>
</div> 