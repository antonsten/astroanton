---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank you for subscribing!">
    <main class="container mx-auto px-4 py-16">
        <div class="max-w-2xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Thank you for subscribing!</h1>
            <p class="text-xl mb-8">You'll receive your first newsletter soon.</p>
            <a href="/" class="inline-block bg-green text-white px-6 py-3 rounded-xl hover:bg-green/90 transition-colors">
                Return to Home
            </a>
        </div>
    </main>
</Layout> 