---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import HtmlHead from '../components/HtmlHead.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { 
	title, 
	description = "Anton Sten - Product design leader working remotely from the Swedish countryside" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<HtmlHead title={title} description={description} />
	<body class="bg-white text-black antialiased">
		<Navigation />
		<main class="min-h-screen">
			<div class="max-w-[660px] mx-auto px-8 sm:px-6 pt-24 sm:pt-32 pb-16">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	/* Add any global styles here */
	html {
		font-family: 'Suisse Intl', system-ui, sans-serif;
	}
</style>
